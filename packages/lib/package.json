{
  "name": "@virtualgrid/lib",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.js"
    }
  },
  "repository": "https://github.com/vicentelyrio/virtual-grid/tree/main/packages/lib",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@virtualgrid/eslint-config": "*",
    "@virtualgrid/typescript-config": "*",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-tsc-watch": "^3.0.1"
  },
  "dependencies": {
    "react-fast-compare": "^3.2.2"
  },
  "keywords": [
    "react",
    "virtual",
    "virtualization",
    "grid",
    "table",
    "performance",
    "hooks"
  ],
  "description": "A React hook-based library for efficient grid virtualization"
}
